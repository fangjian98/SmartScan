<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartScan" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Customize your theme here. -->
    </style>

    <!--settings theme using freeme thmem-->
    <style name="Theme.Freeme" parent="@*freeme:style/Theme.Freeme.DayNight" />

    <!--multi select header text theme-->
    <style name="AppTheme.Title" parent="@*freeme:style/TextAppearance.Freeme.Widget.ActionMode.Title"/>
    <style name="AppTheme" parent="@*freeme:style/Theme.Freeme.Main" />
    <style name="AppTheme.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
        <item name="android:clickable">true</item>
    </style>

    <!--TabLayout theme-->
    <style name="Widget.Freeme.Design.TabLayout" parent="android:Widget.Material">
        <item name="tab_gravity">center</item>
        <item name="tab_maxWidth">264dp</item>
        <item name="tab_height">36dp</item>
        <item name="tab_indicatorColor">?android:attr/colorAccent</item>
        <item name="tab_indicatorHeight">2dp</item>
        <item name="tab_paddingStart">8dp</item>
        <item name="tab_paddingEnd">8dp</item>
        <item name="tab_background">@null</item>
        <item name="tab_selectedTextColor">?android:colorControlActivated</item>
        <item name="tab_textColor">?android:colorControlNormal</item>
        <item name="tab_textSize">15sp</item>
    </style>

</resources>