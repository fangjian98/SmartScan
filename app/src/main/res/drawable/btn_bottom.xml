<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle" android:tint="@color/button_freeme_color">
            <corners android:radius="?android:attr/buttonCornerRadius" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item>
                <shape android:shape="rectangle" android:tint="@color/app_theme_color_accent">
                    <corners android:radius="?android:attr/buttonCornerRadius" />
                    <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>